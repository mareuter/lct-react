{
  "enabled": false,
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":rebaseStalePrs"
  ],
  "packageRules": [
    {
      "groupName": "Runtime Dependencies Core",
      "matchPackagePatterns": [
        "^react"
      ]
    },
    {
      "groupName": "Runtime Dependencies Support",
      "matchPackagePatterns": [
        "^@fortawesome"
      ],
      "matchPackageNames": [
        "axios",
        "jstz",
        "luxon"
      ]
    },
    {
      "groupName": "Runtime Dependencies Graphics",
      "matchPackagePatterns": [
        "^@react-three"
      ],
      "matchPackageNames": [
        "three"
      ]
    },
    {
      "groupName": "Development Dependencies Dev and Test",
      "matchPackagePatterns": [
        "^@juggle",
        "^@testing",
        "^@vite",
        "^vite"
      ],
      "matchPackageNames": [
        "jsdom",
        "yarn"
      ]
    },
    {
      "groupName": "Development Dependencies Support",
      "matchPackagePatterns": [
        "^@typescript",
        "^eslint"
      ],
      "matchPackageNames": [
        "prettier",
        "sass",
        "typescript"
      ]
    }
  ],
  "timezone": "America/Phoenix",
  "schedule": [
    "on the 2nd saturday of the month at 11 AM"
  ]
}