{
  "enabled": true,
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":rebaseStalePrs",
    "workarounds:nodeDockerVersioning"
  ],
  "packageRules": [
    {
      "groupName": "Runtime Dependencies Core",
      "matchPackagePatterns": [
        "^react"
      ]
    },
    {
      "groupName": "Runtime Dependencies Support",
      "matchPackagePatterns": [
        "^@fortawesome"
      ],
      "matchPackageNames": [
        "axios",
        "jstz",
        "luxon"
      ]
    },
    {
      "groupName": "Runtime Dependencies Graphics",
      "matchPackagePatterns": [
        "^@react-three"
      ],
      "matchPackageNames": [
        "three"
      ],
      "extends": [
        "schedule:monthly"
      ]
    },
    {
      "groupName": "Development Dependencies Dev and Test",
      "matchPackagePatterns": [
        "^@juggle",
        "^@testing",
        "^@vite",
        "^vite"
      ],
      "matchPackageNames": [
        "jsdom",
        "yarn"
      ]
    },
    {
      "groupName": "Development Dependencies Support",
      "matchPackagePatterns": [
        "^@typescript",
        "^eslint"
      ],
      "matchPackageNames": [
        "prettier",
        "sass",
        "typescript"
      ]
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ]
    },
    {
      "groupName": "Node.js",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "node"
      ]
    }
  ],
  "timezone": "America/Phoenix",
  "schedule": [
    "on Saturday after 4pm",
    "on Saturday before 11pm"
  ]
}